<h1> hello stranger </h2>



  <% @posts.each do |post| %>

    <div class="row post">
      <p>Contributor: <%= post.user.username %></p>
      <p>Title: <%= post.title %></p>
      <p>Date: <%= post.created_at.strftime("%d-%m-%Y %H:%M") %></p>
      <p>Where: <%= post.country_name %></p>
      <p>Amount spent: S$ <%= post.budget %></p>

      <p>Category: <%= @activity.find(post.id).name %></p>
    <!-- from #@activity, get the post belonging to it and return the name of activity.post_id.name -->

      <p><%= link_to (image_tag post.image.url(:medium)), home_path(post) %></p>
      <p><a href="<%= home_path(post.id) %>">Read more</a></p>
    </div>

  <% end %>
