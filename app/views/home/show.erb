<div class="posts-wrapper row">

  <p>Title: <%= @post.title %></p>
  <p>Date: <%= @post.created_at.strftime("%d-%m-%Y %H:%M") %></p>
  <p>Where: <%= @post.country_name %></p>
  <p>Amount spent: S$ <%= @post.budget %></p>

  <p>Category: <%= @activity %></p>

  <p><%= link_to (image_tag @post.image.url(:medium)) %></p>
  <p>What went down: <%= @post.description%></p>

  <!-- cancel and delete functions -->
  <div>
  <%= link_to "Back", explore_path %>
  </div>

</div>
