<div class="posts-wrapper row">

  <div class="post">

    <div class="post-head">
      <p><i class="fa fa-user"></i> <strong><%= @post.user.username %></strong></p>
      <p>Title: <%= @post.title %></p>
      <p>Created <i><%= time_ago_in_words(@post.created_at) %> ago</i></p>
    </div>

    <div class="caption">
      <p>This was in <i><%= @post.country_name %></i></p>
      <p>I spent S$ <i><%= @post.budget %></i></p>
    <p>Category: <i><%= @activity.first.name %></i></p>
  </div>

    <p class="image center-block"><%= link_to (image_tag @post.image.url(:medium)) %></p>

    <p class="description">What went down: <%= @post.description%></p>

    <p class = "like-globe"><%= link_to like_post_path(@post), method: :put do %><i class="fa fa-globe fa-spin fa-2x"></i> <%= @post.get_upvotes.size %><% end %> karma points</p>

    <!-- back and edit functions -->

  </div>
</div>
</div>

<div class="text-center">
<%= link_to "Back", posts_path %>
</div>
