<div class="posts-wrapper row">

  <div class="post">

    <div class="post-head">
      <p><i class="fa fa-user"></i> <strong><%= @post.user.username %></strong></p>
      <p>Title: <%= @post.title %></p>
      <p>Created <i><%= time_ago_in_words(@post.created_at) %> ago</i></p>
    </div>

    <div class="caption">
      <p>This was in <strong><i><%= @post.country_name %></i></strong></p>
      <p>I spent <strong>S$<i><%= @post.budget %></i></strong></p>
      <p>Category: <strong><i><%= @activity.first.name %></i></strong></p>
  </div>

    <p class="image center-block"><%= link_to (image_tag @post.image.url(:medium)) %></p>

    <p class="description"><i>What happened:</i> <%= @post.description%></p>

    <p class = "like_globe"><%= link_to like_post_path(@post), method: :put do %><i class="fa fa-globe fa-spin fa-2x"></i> <%= @post.get_upvotes.size %><% end %> karma points</p>

  </div>

</div>

<!-- back and edit functions -->
</div>
<div class="text-center">
<%= link_to "Back", posts_path %>
|
<%= link_to "Edit Post", edit_post_path(@post) %>
</div>
