<div class="form-wrapper">
  <%= simple_form_for @post, html: { class: 'form-horizontal', multipart: true } do |f| %>

    <div class="form01">
      <%= f.input :title %>
    </div>

    <div class="form01">
      <%= f.input :image %>
    </div>

<!-- insert form for country here -->

    <div class="form01">
      <%= f.input :budget %>
    </div>

    <div class="form01">
      <%= f.input :description %>
    </div>

    <div class="form01">
      <%= f.button :submit, class: 'btn-success' %>
    </div>

  <% end %>
</div>

<!-- delete function -->
<div>
  <%= link_to "Delete Post", posts_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
  |
  <%= link_to "Cancel", posts_path %>
</div>
